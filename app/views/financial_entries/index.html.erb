<p id="notice"><%= notice %></p>

<h1>Listing Financial Entries</h1>


<%= link_to '<i class="fa fa-plus"></i> New Financial entry'.html_safe, new_financial_entry_path, :class => "pull-right" %>
<table class="table table-hover table-striped table-responsive">
  <thead>
    <tr>
      <th>Alobs</th>
      <th>Description</th>
      <th>Party Involved</th>
      <th>Transaction Date</th>
      <th>Obligation Incurred</th>
      <th>Fund source</th>
    </tr>
  </thead>

  <tbody>
    <% @financial_entries.each do |financial_entry| %>
      <tr>
        <td><%= financial_entry.alobs %></td>
        <td><%= link_to financial_entry.description, financial_entry %></td>
        <td><%= financial_entry.party_involved %></td>
        <td><%= financial_entry.transaction_date.strftime("%d %B %Y") if financial_entry.transaction_date %></td>
        <td><%= number_with_precision(financial_entry.obligation_incurred, precision: 2, separator: '.', delimiter: ',') %></td>
        <td><%= financial_entry.fund_source %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @financial_entries, renderer: BootstrapPagination::Rails %>
</div>
