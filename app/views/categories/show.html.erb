<p id="notice"><%= notice %></p>

<h1><b> <%= @category.description %> </b></h1>

<%= link_to '<i class="fa fa-plus"></i> Add Financial Year'.html_safe, new_financial_year_path(:financial_year => {:category_id => @category.id}), :class => "pull-right" %>

<table class="table table-hover table-responsive table-striped">
  <thead>
    <tr>
      <th>Year</th>
      <th>Budget</th>
      <th>Balance</th>
      <th>Spending</th>
    </tr>
  </thead>

  <tbody>
    <% @financial_years.each do |financial_year| %>
      <tr>
        <td><%= link_to financial_year.year, financial_year %></td>
        <td><%= financial_year.budget %></td>
        <td><%= financial_year.yearly_balance %>
        <td><%= financial_year.yearly_spendings %>
      </tr>
    <% end %>
  </tbody>
</table>
