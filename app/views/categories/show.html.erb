<p id="notice"><%= notice %></p>

<h1><b> <%= @category.description %> </b></h1>

<%= link_to '<i class="fa fa-plus"></i> Add Financial Year'.html_safe, new_financial_year_path(:financial_year => {:category_id => @category.id}), :class => "pull-right" %>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Year</th>
      <th>Budget</th>
      <th>Balance</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @financial_years.each do |financial_year| %>
      <tr>
        <td><%= financial_year.year %></td>
        <td><%= financial_year.budget %></td>
        <td><%= financial_year.yearly_balance %></td>
        <td><%= link_to 'Show', financial_year %> | <%= link_to 'Edit', edit_financial_year_path(financial_year) %> | <%= link_to 'Delete', financial_year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
