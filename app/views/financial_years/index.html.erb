<p id="notice"><%= notice %></p>

<h1>Listing Financial Years</h1>


<%= link_to '<i class="fa fa-plus"></i> New Financial year', new_financial_year_path, :class => "pull-right" %>
<table class="table table-hover table-striped table-responsive">
  <thead>
    <tr>
      <th>Year</th>
      <th>Budget</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @financial_years.each do |financial_year| %>
      <tr>
        <td><%= link_to financial_year.year, financial_year %></td>
        <td><%= financial_year.budget %></td>
        <td><%= link_to financial_year.category.description, financial_year.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

